<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/settingsFragmentView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin" >

	<!-- User Profile -->
	<!-- User Profile Photo -->

	<RelativeLayout
		android:id="@+id/settings_user_profile_photo_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:layout_marginTop="16dp" >

		<TextView
			android:id="@+id/settings_user_profile_photo_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" />

		<ImageView
			android:id="@+id/settings_user_profile_photo_image_view"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:src="@drawable/ic_user_avatar_test" />
	</RelativeLayout>

	<!-- User Nickname -->

	<RelativeLayout
		android:id="@+id/settings_user_nickname_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_user_profile_photo_linear_layout" >

		<TextView
			android:id="@+id/settings_user_nickname_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_user_nickname_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>

	<!-- User Email -->

	<RelativeLayout
		android:id="@+id/settings_user_email_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_user_nickname_linear_layout" >

		<TextView
			android:id="@+id/settings_user_email_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_user_email_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>

	<!-- User Gender -->

	<RelativeLayout
		android:id="@+id/settings_user_gender_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_user_email_linear_layout" >

		<TextView
			android:id="@+id/settings_user_gender_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_user_gender_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="Male" >
		</TextView>
	</RelativeLayout>

	<!-- User City -->

	<RelativeLayout
		android:id="@+id/settings_user_city_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_user_gender_linear_layout" >

		<TextView
			android:id="@+id/settings_user_city_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_user_city_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>

	<!-- Splitter for User Profile and System settings -->

	<View
		android:id="@+id/settings_splitter_view"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@id/settings_user_city_linear_layout"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="8dp"
		android:background="@android:color/darker_gray" />

	<!-- System Language -->

	<RelativeLayout
		android:id="@+id/settings_system_language_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_splitter_view" >

		<TextView
			android:id="@+id/settings_system_language_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_system_language_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>

	<!-- System Version -->

	<RelativeLayout
		android:id="@+id/settings_system_version_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_system_language_linear_layout" >

		<TextView
			android:id="@+id/settings_system_version_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>

		<TextView
			android:id="@+id/settings_system_version_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>

	<!-- Applcation About -->

	<RelativeLayout
		android:id="@+id/settings_system_about_linear_layout"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/settings_system_version_linear_layout" >

		<TextView
			android:id="@+id/settings_system_about_label_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" >
		</TextView>
	</RelativeLayout>
	
	

        <Button
            android:id="@+id/settings_logout"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp" />


</RelativeLayout>